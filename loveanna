<body>

  <div class="bear">ʕ•ᴥ•ʔ</div>
  <div class="question-box">
    <div id="question" class="question">Will you be my special someone? 💞</div>
    <div class="buttons">
      <button class="yes-btn" onclick="handleYes()">Yes 💖</button>
      <button class="no-btn" onclick="handleNo()">No 🙈</button>
    </div>
  </div>

  <div id="finalMessage" class="final-message">
    <div class="hearts">💘💘💘</div>
    Yay! You just made someone the happiest person alive! 🥰💍<br>
    Let’s make beautiful memories together! 🌸
    <div class="hearts">💘💘💘</div>
  </div>

  <script>
    const questions = [
      "Are you sure? 🥺",
      "Really? Still yes? 😳",
      "Like, for real for real?? 😍",
      "No backsies? 👀",
      "So… is that a YES-yes?? 💘"
    ];

    let index = 0;

    function handleYes() {
      if (index < questions.length) {
        document.getElementById('question').innerText = questions[index];
        index++;
      } else {
        document.querySelector('.question-box').style.display = "none";
        document.getElementById('finalMessage').style.display = "block";
      }
    }

    function handleNo() {
      alert("Oops! That’s illegal 😤 Try again! 💔");
    }
  </script>

